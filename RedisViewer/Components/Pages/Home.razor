    // Search in values
    private async Task SearchInValuesAsync()
    {
        if (string.IsNullOrWhiteSpace(_searchPattern) || _searchPattern == "*") return;

        await CancelStreamingAsync();

        _keys = [];
        _stringKeys = [];
        _hashKeys = [];
        _otherKeys = [];
        _selectedKey = null;
        _selectedValue = null;
        _isSearchingValues = true;
        _streamCts = new CancellationTokenSource();

        StateHasChanged();

        var tempKeys = new List<RedisKeyInfo>();

        try
        {
            await foreach (var key in Redis.SearchInValuesAsync(_searchPattern, _streamCts.Token))
            {
                if (_streamCts.Token.IsCancellationRequested)
                    break;

                tempKeys.Add(key);

                if (tempKeys.Count % 100 == 0)
                {
                    UpdateFilteredLists(tempKeys);
                    StateHasChanged();
                    await Task.Delay(1);
                }
            }

            UpdateFilteredLists(tempKeys);
            Snackbar.Add($"Found {_keys.Count:N0} matching keys", Severity.Success);
        }
        catch (OperationCanceledException)
        {
            UpdateFilteredLists(tempKeys);
            Snackbar.Add($"Search stopped at {_keys.Count:N0} keys", Severity.Info);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSearchingValues = false;
            StateHasChanged();
        }
    }

