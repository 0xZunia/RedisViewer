            });
        }
        catch
        {
            return value;
        }
    }

    private string FormatJsonWithHighlighting(string? value)
    {
        var formatted = FormatJson(value);
        if (string.IsNullOrEmpty(formatted)) return formatted;

        var result = new System.Text.StringBuilder();
        var inString = false;
        var isKey = false;
        var i = 0;

        while (i < formatted.Length)
        {
            var c = formatted[i];

            if (c == '"' && (i == 0 || formatted[i - 1] != '\\'))
            {
                if (!inString)
                {
                    inString = true;
                    // Check if this is a key (followed by content then :)
                    var lookAhead = formatted.IndexOf('"', i + 1);
                    if (lookAhead > 0)
                    {
                        var afterQuote = formatted.Substring(lookAhead + 1).TrimStart();
                        isKey = afterQuote.StartsWith(":");
                    }
                    var color = isKey ? "#9cdcfe" : "#ce9178";
                    result.Append($"<span style=\"color:{color};\">\"");
                }
                else
                {
                    result.Append("\"</span>");
                    inString = false;
                    isKey = false;
                }
            }
            else if (!inString)
            {
                if (c == ':')
                    result.Append("<span style=\"color:#d4d4d4;\">:</span>");
                else if (c == '{' || c == '}')
                    result.Append($"<span style=\"color:#ffd700;\">{c}</span>");
                else if (c == '[' || c == ']')
                    result.Append($"<span style=\"color:#da70d6;\">{c}</span>");
                else if (c == ',' )
                    result.Append("<span style=\"color:#d4d4d4;\">,</span>");
                else if (char.IsDigit(c) || c == '-' || c == '.')
                {
                    var numStart = i;
                    while (i < formatted.Length && (char.IsDigit(formatted[i]) || formatted[i] == '.' || formatted[i] == '-' || formatted[i] == 'e' || formatted[i] == 'E' || formatted[i] == '+'))
                        i++;
                    result.Append($"<span style=\"color:#b5cea8;\">{System.Web.HttpUtility.HtmlEncode(formatted.Substring(numStart, i - numStart))}</span>");
                    continue;
                }
                else if (formatted.Substring(i).StartsWith("true") || formatted.Substring(i).StartsWith("false"))
                {
                    var word = formatted.Substring(i).StartsWith("true") ? "true" : "false";
                    result.Append($"<span style=\"color:#569cd6;\">{word}</span>");
                    i += word.Length;
                    continue;
                }
                else if (formatted.Substring(i).StartsWith("null"))
                {
                    result.Append("<span style=\"color:#569cd6;\">null</span>");
                    i += 4;
                    continue;
                }
                else
                    result.Append(c);
            }
            else
            {
                // Inside string - escape HTML
                result.Append(System.Web.HttpUtility.HtmlEncode(c.ToString()));
            }
            i++;
        }

