        {
            _subscriber = Redis.GetSubscriber();
            _messageQueue = await _subscriber.SubscribeAsync(StackExchange.Redis.RedisChannel.Literal(_pubSubChannel));
            _isSubscribed = true;

            _ = Task.Run(async () =>
            {
                await foreach (var message in _messageQueue)
                {
                    await InvokeAsync(() =>
                    {
                        _pubSubMessages.Insert(0, new PubSubEntry
                        {
                            Channel = _pubSubChannel,
                            Message = message.Message.ToString(),
                            IsSent = false
                        });
                        if (_pubSubMessages.Count > 100) _pubSubMessages.RemoveAt(_pubSubMessages.Count - 1);
                        StateHasChanged();
                    });
                }
            });

            Snackbar.Add($"Subscribed to {_pubSubChannel}", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task UnsubscribeFromChannel()
    {
        if (!_isSubscribed || _subscriber == null) return;

        try
        {
            await _subscriber.UnsubscribeAsync(StackExchange.Redis.RedisChannel.Literal(_pubSubChannel));
            _isSubscribed = false;
            Snackbar.Add("Unsubscribed", Severity.Info);
        }
        catch { }
    }

    private async Task PublishMessage()
    {
        if (string.IsNullOrWhiteSpace(_pubSubChannel) || string.IsNullOrWhiteSpace(_pubSubMessage)) return;

        try
        {
            var count = await Redis.PublishAsync(_pubSubChannel, _pubSubMessage);
            _pubSubMessages.Insert(0, new PubSubEntry
            {
                Channel = _pubSubChannel,
                Message = _pubSubMessage,
                IsSent = true
            });
            _pubSubMessage = "";
            Snackbar.Add($"Published to {count} subscribers", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

