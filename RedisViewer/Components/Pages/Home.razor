    private void BuildTreeView()
    {
        // Group keys by namespace efficiently
        var groups = _keys
            .GroupBy(k => {
                var idx = k.Key.IndexOf(':');
                return idx > 0 ? k.Key.Substring(0, idx) : "(root)";
            })
            .Select(g => new NamespaceGroup
            {
                Name = g.Key,
                TotalCount = g.Count(),
                Keys = g.Take(MaxKeysPerNamespace).ToList()
            })
            .OrderBy(g => g.Name)
            .ToList();

        _namespaceGroups = groups;
    }

