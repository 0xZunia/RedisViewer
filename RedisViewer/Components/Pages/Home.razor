    private async Task SetBulkTtl()
    {
        if (_selectedKeys.Count == 0) return;

        _isSettingBulkTtl = true;
        StateHasChanged();

        try
        {
            var expiry = _bulkTtlUnit switch
            {
                "minutes" => TimeSpan.FromMinutes(_bulkTtlValue),
                "hours" => TimeSpan.FromHours(_bulkTtlValue),
                "days" => TimeSpan.FromDays(_bulkTtlValue),
                _ => TimeSpan.FromSeconds(_bulkTtlValue)
            };

            var count = await Redis.SetBulkTtlAsync(_selectedKeys, expiry);
            _showBulkTtlDialog = false;
            Snackbar.Add($"TTL set on {count} keys", Severity.Success);
            await RefreshKeys();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSettingBulkTtl = false;
        }
    }

