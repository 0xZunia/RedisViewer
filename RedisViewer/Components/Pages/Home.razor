            _streamCts?.Cancel();
            _streamCts?.Dispose();
            if (_isSubscribed && _subscriber != null)
            {
                _ = _subscriber.UnsubscribeAllAsync();
            }
        }
        catch { }
        _keys = [];
        _stringKeys = [];
        _hashKeys = [];
        _otherKeys = [];
    }
